scchart DDD_pacemaker {
	
	input signal Vsense,Asense,AVI_ex,PVARP_ex;
	output signal start_AVI,stop_AVI,Vpace,start_PVARP;
	
	initial state TOP
	{			  	
	  		region AVI:
	  			initial state idle
	  			--> waitPVARP_ex with Vsense; 
	  			//--> waitVsense with Asense/start_AVI;
	  			
	  			state waitPVARP_ex;
	  			
	  			state waitVsense
	  			--> idle with Vsense/stop_AVI
	  			--> idle with AVI_ex/Vpace;
	  		
	  		region PVARP:
	  			initial state idle
	  			--> ignoreAtrialEvents with Vsense/start_PVARP
	  			--> ignoreAtrialEvents with Vpace/start_PVARP;
	  			
	  			state ignoreAtrialEvents;	  
	};

}
