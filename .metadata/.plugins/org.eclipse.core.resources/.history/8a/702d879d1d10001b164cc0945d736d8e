scchart DDD_pacemaker {
	
	input signal Vsense,Asense,AVI_ex,PVARP_ex,AEI_ex,VRP_ex,LRI_ex,stop_LRI,stop_AEI,URI_ex;
	output signal stop_AVI,start_AVI,Vpace,start_PVARP,start_AEI,Apace,start_VRP,start_LRI,start_URI,LRI_stop;
	
	initial state TOP
	{			  	
	  		region AVI:
	  			
	  			initial state idle
	  			{
	  			  	region A: // wait for AVI
	  					
	  					initial state idle
	  					--> waitVRP with Asense/start_AVI	  					//start timer
	  					--> waitVRP with Apace/start_AVI;	  					//start timer
	  					
	  					state waitVRP
	  					-->waitVRP with Vsense/stop_AVI
	  					-->finishedPVRP with PVARP_ex
	  					-->AVI_done with AVI_ex;
	  					
	  					state finishedPVRP
	  					--> Action with VRP_ex
	  					-->waitVRP with Asense/start_AVI;	  					//start timer

	  					
	  					state Action
	  					--> Vsense_detected with Vsense/stop_AVI
	  					--> AVI_done with AVI_ex;
	  					
	  					final state AVI_done;
	  					
	  					final state Vsense_detected;
	  			
	  				region B: // wait for URI
	  			
	  					initial state idle
	  					--> URI_done with URI_ex;
	  					
	  					final state URI_done;
	  			}
	  			>->idle with / Vpace;
	  			 	
	  		
	  		region AEI:
	  			initial state idle
	  			--> waitPVARP with Vpace/start_AEI
	  			--> waitPVARP with Vsense/start_AEI;
	  			
	  			state waitPVARP
	  			--> Action with PVARP_ex;
	  			
	  			state Action
	  			--> idle with Asense/stop_AEI
	  			--> idle with AEI_ex/Apace;
	  		
	  		region PVARP:
	  		
	  			initial state idle
	  			--> waitPVARP with Vsense/start_PVARP
	  			--> waitPVARP with Vpace/start_PVARP;
	  			
	  			state waitPVARP
	  			--> idle with PVARP_ex;
	  			
	  		region VRP:
	  			
	  			initial state idle
	  			--> waitVRP with Vsense/start_VRP
	  			--> waitVRP with Vpace/start_VRP;
	  			
	  			state waitVRP
	  			--> idle with VRP_ex;
	  		
	  		region LRI:
	  			
	  			initial state idle
	  			--> waitVRP with Vsense/start_LRI;
	  			
	  			
	  			state waitVRP
	  			--> waitLRI with VRP_ex;
	  			
	  			state waitLRI
	  			-->reinit with LRI_ex/Vpace
	  			-->reinit with Vsense/LRI_stop;
	  			
	  			state reinit
	  			--> waitVRP immeditate;
	  			
	  			//state waitVRP
	  			//--> Action with VRP_ex;
	  			
	  			//state Action
	  			//--> waitVRP with Vpace
				//--> waitVRP with Vsense;
				
			
				
				
	  			
	  		region URI:
	  			
	  			initial state idle
	  			--> waitURI with Vsense/start_URI
	  			--> waitURI with Vpace/start_URI;
	  			
	  			state waitURI
	  			--> idle with URI_ex;
	  			
	};

}
