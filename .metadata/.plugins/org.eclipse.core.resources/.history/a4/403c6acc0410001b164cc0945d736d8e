scchart DDD_pacemaker {
	
	input signal Vsense,Asense,AVI_ex,PVARP_ex,AEI_ex;
	output signal start_AVI,stop_AVI,Vpace,start_PVARP,start_AEI,Apace;
	
	initial state TOP
	{			  	
	  		region AVI:
	  			initial state idle 
	  			--> waitVsense with Asense/start_AVI;
	  			
	  			state waitPVARP_ex;
	  			
	  			state waitVsense
	  			--> idle with Vsense/stop_AVI
	  			--> idle with AVI_ex/Vpace;
	  		
	  		//region PVARP:
	  			//initial state idle
	  			//--> waitPVARP with Vsense/start_PVARP
	  			//--> waitPVARP with Vpace/start_PVARP;
	  			
	  			//state waitPVARP
	  			//--> idle with PVARP_ex;
	  			
	  		region AEI:
	  			initial state idle
	  			--> waitPVARP with Vpace/start_AEI
	  			--> waitPVARP with Vsense/start_AEI;
	  			
	  			state waitPVARP
	  			--> Action with PVARP_ex;
	  			
	  			state Action
	  			--> idle with Asense
	  			--> idle with AEI_ex/Apace;
	  		
	  		region PVARP:
	  		
	  			initial state idle
	  			--> waitPVARP_ex;
	};

}
